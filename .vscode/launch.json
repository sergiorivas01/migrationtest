{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach Backend (9229)",
      "port": 9229,
      "restart": true,
      "timeout": 10000
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Debug Frontend (Vite)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend",
      "preLaunchTask": "Frontend: Dev"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Attach Backend (9229)"],
      "preLaunchTask": "Dev: Backend+Frontend"
    }
  ]
}

{
  "version": "0.2.0",
